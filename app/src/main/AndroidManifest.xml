<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ph.dlsu.s11.davidk.taste_eat">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/taste_eat_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/taste_eat_logo_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TasteEat">
        <activity android:name=".AddRecipeActivity"></activity>
        <activity android:name=".AddCuisineActivity" />
        <activity android:name=".SuggestionActivity" />
        <activity android:name=".AccountActivity" />
        <activity android:name=".RecipeItemActivity" />
        <activity android:name=".RecipesActivity" />
        <activity android:name=".LikedActivity" />
        <activity android:name=".SavedActivity" />
        <activity android:name=".HomeActivity" />
        <activity android:name=".RegisterActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver android:name=".MyBroadcastReceiver">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED"/>
            </intent-filter>
        </receiver>
    </application>

</manifest>